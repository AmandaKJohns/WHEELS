<div class='welcome_background'>

<div class='container'>
<div class='row'>
  <div class='col-md-4 content'>
  </div>
  <div class='col-md-4'>
    <br>
  </div>
  <div class='col-md-4'>  
    <h2>Welcome to Wheels</h2>
    <%= form_tag(user_trips_path, method: :post) do %>
      <%= label_tag("Starting Address")%>
      <%= text_field_tag(:address1)%><br><br> 
      <%= label_tag("Dropoff Address")%>
      <%= text_field_tag(:address2)%><br><br>
      
      <% if @favorite_trips != nil && @favorite_trips.size > 0  %>
        <%= label_tag("Favorite Trips")%><br><br>
        <%= select_tag(:trip, options_for_select(@favorite_trips), prompt: "Choose Previous Trip")%><br><br>
      <% end %>
      
      <%= submit_tag("Search") %>
    <% end %>
    <% flash.each do |key, value| %>
        <div class="alert alert-danger" role="alert">
          <button type="button" class="close" data-dismiss="alert">X</button>
          <%= value %>
        </div>
      <% end %>
  </div>
</div> 
</div>

