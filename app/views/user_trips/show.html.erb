<div class ='trip_show'> 
  <div class='row display'>
      <div class='row'>
        <div class='col-md-4'>
          <p></p>
        </div>
        <div class='col-md-4'>
          
        </div>
        <div class='col-md-4'>
          <h3>My Trip</h3>
          <h4>Origin: <%=@trip.origin.address%> </h4>   
          <h4>Destination: <%=@trip.destination.address %></h4>
        </div>
      </div>
  </div>
  <div class='row display'>
    <div class='col-md-4'>
      <h3>NYC Taxi:</h3>
      <p>Estimated Cost: $<%= @cost %></p>
      <p>Estimated Time: <%= @time %> minutes</p>
    </div>

    <div class='col-md-4'>
      <h3>Uber X:</h3>
      <p>Estimated Cost: <%= @uber_ride["estimate"] %></p>
      <p>Estimated Time:  <%= @uber_ride["duration"] %> minutes</p>
    </div>

    <div class='col-md-4'>
      <h3>Lyft:</h3>
      <p>Estimated Cost: $<%= @lyft.cost %></p>
      <p>Estimated Time: <%= @lyft.time %> minutes</p>
    </div>
  </div>
  <div class='row display'>
    <center><p>
      <%= link_to "Taxi Data", taxi_data_path %>
      <%= link_to "Subway", subway_path %>
   
    </p></center>
  </div>
  <div class='row'>
    <div class="btn-group btn-group-justified">
      <a href="<%= root_path %>" class="btn btn-default">New Search</a>
    </div>
  </div>
</div>

